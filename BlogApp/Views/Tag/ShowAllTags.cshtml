                <input class="background-main btn-edit" type="submit" value="Редактировать" />
            </form> *@

            <form class="inline" method="post" asp-controller="Tag" asp-action="DeleteTag" asp-route-id=@tag.Id>
                <input class="background-main btn-delete" type="submit" value="Удалить" />
            </form>
            <p></p>
        </div>
    }
