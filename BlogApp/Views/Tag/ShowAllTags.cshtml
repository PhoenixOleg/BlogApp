@model List<BlogApp.BLL.ViewModels.Tag.ShowTagViewModel>

<h2>Все теги</h2>
<div>
    <div>
        <a class="enter-submit" method="get" asp-controller="Tag" asp-action="AddTag">Добавить</a>
    </div>
    @foreach (var tag in Model)
    {
        <div>
            <textarea class="textarea" placeholder="Тег" disabled>@tag.Name</textarea>

            <a class="btn-submit" method="get" asp-action="EditTag" asp-route-id=@tag.Id asp-route-name=@tag.Name>Редактировать</a>

