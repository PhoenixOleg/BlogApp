@model List<BlogApp.BLL.ViewModels.Article.ShowArticleViewModel>

@if (Model.Count() == 0)
{
    <h5 class="card-title">Еще никто не опубликовал статью</h5>
    <h6 class="card-title"><a method="get" asp-controller="Article" asp-action="CreateArticle">Добавить статью</a></h6>
}
else
{
    <h5 class="card-title">Все статьи</h5>
    <h6 class="card-title"><a method="get" asp-controller="Article" asp-action="CreateArticle">Добавить статью</a></h6>

    foreach (var article in Model)
    {
        <div>
        <h3>@article.Title</h3>
        <h5>@article.Description</h5>
        <p>@article.PostDate</p>
        @* TODO прикрутить автора *@
        </div>
        <div>
            <a method="get" asp-controller="Article" asp-action="ShowArticle" asp-route-id="@article.Id">Просмотреть</a>
        </div>

        //TODO Закрыть авторством и ролями
        <div>
            <a method="get" asp-controller="Article" asp-action="EditArticle" asp-route-id="@article.Id">Редактировать</a>
        </div>
        <div>
            <a method="get" asp-controller="Article" asp-action="DeleteArticle" asp-route-id="@article.Id">Удалить</a>
        </div>
    }
}